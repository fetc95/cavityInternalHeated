#includeEtc "caseDicts/postProcessing/probes/probes.cfg"

fields (T.fluid T.solid);
probeLocations
(
    (0.005 0.04 0.005)
	(0.005 0.08 0.005)
	(0.005 0.16 0.005)
);

writeInterval	6;

